{
	"name": "figma-plugin-react-template",
	"version": "1.0.0",
	"description": "This plugin template uses Typescript. If you are familiar with Javascript, Typescript will look very familiar. In fact, valid Javascript code is already valid Typescript code.",
	"license": "ISC",
	"scripts": {
		"build": "/usr/local/bin/node node_modules/.bin/webpack --mode=production",
		"build:watch": "/usr/local/bin/node node_modules/.bin/webpack --mode=development --watch",
		"prettier:format": "prettier --write 'src/**/*.{js,jsx,ts,tsx,css,json}' "
	},
	"dependencies": {
		"@tippyjs/react": "^4.0.2",
		"lodash-es": "^4.17.15",
		"react": "^16.8.6",
		"react-dom": "^16.8.6"
	},
	"devDependencies": {
		"@figma/plugin-typings": "^1.15.0",
		"@types/react": "^16.8.24",
		"@types/react-dom": "^16.8.5",
		"css-loader": "^3.1.0",
		"html-webpack-inline-source-plugin": "^0.0.10",
		"html-webpack-plugin": "^4.3.0",
		"husky": "^4.2.5",
		"lint-staged": "^10.2.10",
		"node-sass": "^4.14.1",
		"prettier": "^2.0.5",
		"sass-loader": "^8.0.2",
		"style-loader": "^1.2.1",
		"ts-loader": "^7.0.5",
		"tslint": "^6.1.2",
		"tslint-react": "^5.0.0",
		"typescript": "^3.7.4",
		"url-loader": "^4.1.0",
		"webpack": "^4.41.4",
		"webpack-cli": "^3.3.6"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"src/**/*.{js,jsx,ts,tsx,css,json}": [
			"prettier --write",
			"git add"
		]
	}
}
